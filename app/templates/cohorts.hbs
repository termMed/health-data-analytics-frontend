{{outlet}}
<div class="col-md-12 row">
    <div class="col-md-12">
        <div class="col-md-6 grey-border-bottom">
            <h2>Cohorte</h2>
        </div>
        <div class="col-md-6 grey-border-bottom">
            <h3>{{model.cohortData.totalElements}} Pacientes encontrados</h3>
        </div>
    </div>

    <div class="col-md-6">
         <div class="col-md-10 col-md-offset-1">
            <h3>Demografía:</h3>
        </div>
        <div class="col-md-10 col-md-offset-1 input-field" style="margin-bottom:10px;">
          <div style="color: #9e9e9e; font-size:1rem; font-weight: bold;">Género</div>
          <select name="gender" id="genderSelect" class="form-control">
            <option value="null"></option>
            <option value="male">Masculino</option>
            <option value="female" >Femenino</option>
          </select>
        </div>
        <div class="col-md-10 col-md-offset-1 input-field">
            {{input id="ageMin-input" class="form-control" value=model.ageMin type="text"}}
            <label for="ageMin-input" style="margin-left:14px;">Edad mínima</label>
        </div>
        <div class="col-md-10 col-md-offset-1 input-field">
            {{input id="ageMax-input" class="form-control" value=model.ageMax type="text"}}
            <label for="ageMax-input" style="margin-left:14px;">Edad máxima</label>
        </div>
        <div class="col-md-10 col-md-offset-1">
            <h3>Exposición primaria:</h3>
        </div>
        <div class="col-md-3 col-md-offset-1">
                <select name="range" class="form-control refinementDdl" onChange={{action (mut model.primaryLimitation) value="target.value"}} style="display: inline-block;">
                    <option value="404684003" selected>Hallazgo clínico</option>
                    <option value="64572001" selected>Trastorno</option>
                    <option value="373873005">Producto</option>
                    <option value="71388002" >Procedimiento</option>
                  </select>
            </div>
        <div class="col-md-8">
            {{concept-listing filter=model.primaryExposure value=model.primaryExposure limitedRange=true typeId=model.primaryLimitation conceptFsn=model.primaryFsn title='Exposición primaria' cssId="primaryExposure"}}
        </div>
        {{#each model.inclusionCriteria as | refinement index|}}
            <div class="col-md-10 col-md-offset-1">
                <h3>Refinamiento:</h3>
            </div>
            <div class="row">
                <div class="col-md-9 col-md-offset-2 input-field">
                    {{input class="form-control" value=refinement.includeDaysInPast type="text"}}
                    <label for="includeDaysInPast-input" style="margin-left:14px;" class="active">Incluir días</label>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 col-md-offset-1">
                    <select name="has" class="form-control refinementDdl" onChange={{action (mut refinement.has) value="target.value"}}>
                        <option value="true" selected>Ocurre</option>
                        <option value="false">No ocurre</option>
                      </select>
                </div>
                <div class="col-md-2">
                    <select name="range" class="form-control refinementDdl" onChange={{action (mut refinement.limitation) value="target.value"}}>
                        <option value="404684003" selected>Hallazgo clínico</option>
                        <option value="64572001" selected>Trastorno</option>
                        <option value="373873005">Producto</option>
                        <option value="71388002" >Procedimiento</option>
                      </select>
                </div>

                <div class="col-md-5">
                    {{concept-listing filter=refinement.ecl value=refinement.ecl limitedRange=true conceptFsn=refinement.fsn typeId=refinement.limitation title='Criterio de inclusión'}}
                </div>
                <div class="col-md-1">
                    <a class="waves-effect waves-light btn red" {{action "deleteRefinement" index model.inclusionCriteria}}>Remover</a>
                </div>
            </div>
        {{/each}}

        {{#if model.testOutcome}}
            <div class="eclGroup col-md-12">
                <div class="col-md-9 col-md-offset-2  input-field">
                    {{input class="form-control" value=model.testVariable.includeDaysInFuture type="text"}}
                    <label for="includeDaysInPast-input" style="margin-left:14px;" class="active">Dentro del período: (ingresar cantidad de días)</label>
                </div>
                <div class="col-md-2 input-field" style="color: #9e9e9e; font-weight: bold; font-size:12px; padding-top:10px;">Ocurre (o no)</div>
                <div class="col-md-3">
                    <select name="range" class="form-control refinementDdl" onChange={{action (mut model.testVariable.limitation) value="target.value"}}>
                        <option value="404684003" selected>Hallazgo clínico</option>
                        <option value="64572001" selected>Trastorno</option>
                        <option value="373873005">Productp</option>
                        <option value="71388002" >Procedimiento</option>
                      </select>
                </div>
                <div class="col-md-7">
                    {{concept-listing filter=model.testVariable.ecl value=model.testVariable.ecl conceptFsn=model.testVariable.fsn limitedRange=true typeId=model.testVariable.limitation title='Criterio de inclusión'}}
                </div>
                <div class="col-md-9 col-md-offset-2  input-field">
                    {{input class="form-control" value=model.testOutcome.includeDaysInFuture type="text"}}
                    <label for="includeDaysInPast-input" style="margin-left:14px;" class="active">Dentro del período: (ingresar cantidad de días)</label>
                </div>
                <div class="col-md-2 input-field" style="color: #9e9e9e; font-weight: bold; font-size:12px; padding-top:10px;">Riesgo de ocurrencia de</div>
                <div class="col-md-3">
                    <select name="range" class="form-control refinementDdl" onChange={{action (mut model.testOutcome.limitation) value="target.value"}}>
                        <option value="404684003" selected>Hallazgo clínico</option>
                        <option value="64572001" selected>Trastorno</option>
                        <option value="373873005">Producto</option>
                        <option value="71388002" >Procedimiento</option>
                      </select>
                </div>
                <div class="col-md-7">
                    {{concept-listing filter=model.testOutcome.ecl value=model.testOutcome.ecl conceptFsn=model.testOutcome.fsn limitedRange=true typeId=model.testOutcome.limitation title='Criterio de inclusión'}}
                </div>
            </div>
        {{/if}}


        <div class="row">
            <div class="col-md-3 col-md-offset-1">
                <a class="btn btn-primary green" {{action "addQueryRefinement" (mut model.inclusionCriteria)}}>Agregar refinamiento</a>
            </div>
            {{#if model.testOutcome}}
                <div class="col-md-3 col-md-offset-1">
                    <a class="btn btn-primary red" {{action "removeTests" (mut model)}}>Remover test</a>
                </div>
                <div class="col-md-3">
                    <a class="btn btn-primary" {{action "fetchCohort"}}>Ejecutar test</a>
                </div>
            {{else}}
                <div class="col-md-3 col-md-offset-1">
                    <a class="btn btn-primary green" {{action "addTests" (mut model)}}>Agregar test</a>
                </div>
                <div class="col-md-3">
                    <a class="btn btn-primary" {{action "fetchCohort"}}>Buscar cohorte</a>
                </div>
            {{/if}}

        </div>
    </div>
    <div class="col-md-6">
        {{#if loading}}
        <div class="text-center">
            <div class="custom-loader"></div>
        </div>
        {{/if}}
        {{#unless loading}}
        {{#if error}}
            <div class="row col-md-12 text-center red">
                <h3>{{error}}</h3>
            </div>
        {{/if}}
        {{#if model.cohortData.cohortTotal}}
            <div class="row col-md-12 text-center">
                <h3>{{model.cohortData.patientTotalFormatted}} Total de pacientes (se muestra información simulada).</h3>
                <h4>{{model.cohortData.cohortTotalFormatted}} {{get-wording model.primaryLimitation "past"}} {{strip-fsn model.primaryFsn}} {{#each model.inclusionCriteria as | refinement |}} Y {{strip-fsn refinement.fsn}}{{/each}}</h4>
                <h4>{{model.cohortData.hasTestVariablePercentage}}% {{get-wording model.testVariable.limitation "past"}} {{strip-fsn model.testVariable.fsn}} ({{model.cohortData.hasTestVariableCountFormatted}} pacientes)</h4>
                <h4 style="color: #337ab7">De los cuales {{model.cohortData.hasTestVariableChanceOfOutcome}}% {{get-wording model.testOutcome.limitation "and"}} {{strip-fsn model.testOutcome.fsn}} ({{model.cohortData.hasTestVariableHasOutcomeCountFormatted}} pacientes)</h4>
                <h4 style="color: #ff9800">De los restantes {{model.cohortData.hasNotTestVariableCountFormatted}} pacientes que no {{get-wording model.testVariable.limitation "present"}} {{strip-fsn model.testVariable.fsn}}, {{model.cohortData.hasNotTestVariableChanceOfOutcome}}% {{get-wording model.testOutcome.limitation "and"}} {{strip-fsn model.testOutcome.fsn}} ({{model.cohortData.hasNotTestVariableHasOutcomeCountFormatted}} pacientes)</h4>
                <h4>La relación de riesgo para {{get-wording model.testOutcome.limitation "verb"}} {{strip-fsn model.testOutcome.fsn}} luego de {{get-wording model.testVariable.limitation "verb"}} {{strip-fsn model.testVariable.fsn}} en esta cohorte es {{model.cohortData.variableOutcomeHazardRatio}} veces más probable.</h4>
            </div>
            <div class="col-md-12 text-center">
                <div class="col-md-12" style="margin-top:80px;">
                    <div class="col-md-6">
                    <div class="chart" id="graph" data-percent={{model.cohortData.hasTestVariableChanceOfOutcome}}></div>
                    <script>var el = document.getElementById('graph');

                            var options = {
                                percent:  el.getAttribute('data-percent') || 25,
                                size: el.getAttribute('data-size') || 220,
                                lineWidth: el.getAttribute('data-line') || 15,
                                rotate: el.getAttribute('data-rotate') || 0
                            }

                            var canvas = document.createElement('canvas');
                            var span = document.createElement('span');
                            span.textContent = options.percent + '%';

                            if (typeof(G_vmlCanvasManager) !== 'undefined') {
                                G_vmlCanvasManager.initElement(canvas);
                            }

                            var ctx = canvas.getContext('2d');
                            canvas.width = canvas.height = options.size;

                            el.appendChild(span);
                            el.appendChild(canvas);

                            ctx.translate(options.size / 2, options.size / 2);
                            ctx.rotate((-1 / 2 + options.rotate / 180) * Math.PI);

                            var radius = (options.size - options.lineWidth) / 2;

                            var drawCircle = function(color, lineWidth, percent) {
                                    percent = Math.min(Math.max(0, percent || 1), 1);
                                    ctx.beginPath();
                                    ctx.arc(0, 0, radius, 0, Math.PI * 2 * percent, false);
                                    ctx.strokeStyle = color;
                                    ctx.lineCap = 'round';
                                    ctx.lineWidth = lineWidth
                                    ctx.stroke();
                            };

                            drawCircle('#efefef', options.lineWidth, 100 / 100);
                            drawCircle('#337ab7', options.lineWidth, options.percent / 100);</script>
                    </div>
                    <div class="col-md-6">
                        <div class="chart" id="graph2" data-percent={{model.cohortData.hasNotTestVariableChanceOfOutcome}}></div>
                        <script>var el = document.getElementById('graph2');

                            var options = {
                                percent:  el.getAttribute('data-percent') || 25,
                                size: el.getAttribute('data-size') || 220,
                                lineWidth: el.getAttribute('data-line') || 15,
                                rotate: el.getAttribute('data-rotate') || 0
                            }

                            var canvas = document.createElement('canvas');
                            var span = document.createElement('span');
                            span.textContent = options.percent + '%';

                            if (typeof(G_vmlCanvasManager) !== 'undefined') {
                                G_vmlCanvasManager.initElement(canvas);
                            }

                            var ctx = canvas.getContext('2d');
                            canvas.width = canvas.height = options.size;

                            el.appendChild(span);
                            el.appendChild(canvas);

                            ctx.translate(options.size / 2, options.size / 2);
                            ctx.rotate((-1 / 2 + options.rotate / 180) * Math.PI);

                            var radius = (options.size - options.lineWidth) / 2;

                            var drawCircle = function(color, lineWidth, percent) {
                                    percent = Math.min(Math.max(0, percent || 1), 1);
                                    ctx.beginPath();
                                    ctx.arc(0, 0, radius, 0, Math.PI * 2 * percent, false);
                                    ctx.strokeStyle = color;
                                    ctx.lineCap = 'round';
                                    ctx.lineWidth = lineWidth
                                    ctx.stroke();
                            };

                            drawCircle('#efefef', options.lineWidth, 100 / 100);
                            drawCircle('#ff9800', options.lineWidth, options.percent / 100);</script>
                    </div>


                </div>
            </div>

        {{else}}
            <div class="section">
                {{#if model.cohortData.content}}
                    {{#if model.cohortData.last}}
                        <h3>Mostrando {{model.cohortData.totalElements}} pacientes</h3>
                    {{else}}
                        <h3>Primeros 00 de {{model.cohortData.totalElements}} pacientes</h3>
                    {{/if}}
                <table class="striped hdad-table">
                    <thead>
                    <tr>
                        <th>Role ID</th>
                        <th>Sexo</th>
                        <th>Fecha de nacimiento</th>
                        <th>Hallazgo</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each model.cohortData.content as |data|}}
                        <tr  class="parent">
                            <td>{{data.roleId}}</td>
                            <td>{{data.gender}}</td>
                            <td>{{data.dobFormated}}</td>
                            <td>
                            <ul>
                            {{#each (sort-by "dateStamp" "primaryExposure:desc" "conceptTerm" data.encounters) as |encounter|}}
                            <li>
                                {{encounter.date}}, <span>{{encounter.conceptTerm}}</span> {{#if encounter.primaryExposure}}<b style="color:steelblue;">Exposición primaria</b>{{/if}}
                            </li>
                        {{/each}}
                            </ul>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
                {{else}}
                    {{#if model.cohortData}}
                        <h3>No se encontraron resultados</h3>
                    {{/if}}
                {{/if}}
            </div>
        {{/if}}
        {{/unless}}
    </div>
</div>